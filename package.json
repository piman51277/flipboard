{
  "name": "flipboard",
  "version": "1.0.0",
  "description": "A simulated flipboard using 3D css transforms",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "nodemon --delay 2"
  },
  "author": "piman51277",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-plugin-jsdoc": "^48.5.0",
    "nodemon": "^3.1.4",
    "ts-loader": "^9.5.1",
    "typescript": "^4.8.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.10.0"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "assets"
    ],
    "ext": "ts,css,html",
    "exec": "npm run build",
    "delay": 3000
